<?xml version="1.0" encoding="UTF-8"?>
<mdb:MongoDB
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mdb="http://www.example.org/mongo"
    xsi:schemaLocation="http://www.example.org/mongo MongoDB.ecore"
    name="GymMongoInvalid">
  <!-- Error 1: Duplicate collection names -->
  <collections
      name="Gym">
    <schema
        name="gymSchema">
      <fields
          name="city"
          isIndexed="true"/>
      <!-- Error 2: Invalid type specified for capacity (should be integer, not string) -->
      <fields
          name="capacity"
          type="string"/>
      <fields
          name="plan"
          type="object">
        <objectSchema
            name="planSchema">
          <fields
              name="tier"/>
          <fields
              name="price"
              type="float"/>
          <fields
              name="daysPerWeek"
              type="integer"/>
          <!-- Error 3: Duplicate field name "planID" -->
          <fields
              name="planID"
              type="integer"/>
          <fields
              name="planID"
              type="string"/>
        </objectSchema>
      </fields>
      <fields
          name="machine"
          type="object">
        <objectSchema
            name="machineSchema">
          <fields
              name="machineName"/>
          <fields
              name="model"/>
          <fields
              name="brand"/>
        </objectSchema>
      </fields>
    </schema>
  </collections>
  
  <!-- Error 4: Duplicate collection names (same as "Gym" above) -->
  <collections
      name="Gym">
    <schema
        name="gymSchemaDuplicate">
      <fields
          name="location"/>
    </schema>
  </collections>

  <collections
      name="Client">
    <schema
        name="clientSchema">
      <fields
          name="clientName"/>
      <fields
          name="clientDateOfBirth"/>
      <fields
          name="clientEmail"
          isIndexed="true"/>
      <fields
          name="clientPhoneNumber"/>
      <!-- Error 5: Missing collectionReference for objectID type -->
      <fields
          name="clientGym"
          type="objectID"/>
      <!-- Error 6: Invalid collectionReference for objectID type (reference to non-existent collection) -->
      <fields
          name="clientPlan"
          type="objectID"
          collectionReference="//@collections.3"/>
    </schema>
  </collections>

  <collections
      name="Staff">
    <schema
        name="staffSchema">
      <fields
          name="staffName"/>
      <fields
          name="role"/>
      <fields
          name="staffDateOfBirth"/>
      <fields
          name="staffEmail"
          isIndexed="true"/>
      <fields
          name="staffPhoneNumber"/>
      <!-- Error 7: Invalid type "boolean" for an indexed field (e.g., "staffGym") -->
      <fields
          name="staffGym"
          type="boolean"
          isIndexed="true"/>
    </schema>
  </collections>

  <collections
      name="Plan">
    <schema
        name="planSchema">
      <fields
          name="tier"/>
      <fields
          name="price"
          type="float"/>
      <fields
          name="daysPerWeek"
          type="integer"/>
      <!-- Error 8: planID should be unique across schemas, but it was duplicated in "Gym" schema above -->
      <fields
          name="planID"
          type="integer"/>
    </schema>
  </collections>

  <collections
      name="Machine">
    <schema
        name="machineSchema">
      <fields
          name="machineName"/>
      <fields
          name="model"/>
      <!-- Error 9: Missing type for field "brand" -->
      <fields
          name="brand"/>
    </schema>
  </collections>
</mdb:MongoDB>
